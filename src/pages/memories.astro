---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import MemoryGallery from "../components/MemoryGallery.astro";
---

<Layout title="Memories - Poetry Corner">
  <Navbar />

  <!-- Hero Section -->
  <section
    class="pt-24 pb-16 px-6 bg-gradient-to-br from-green-50 to-teal-100 dark:from-gray-800 dark:to-gray-900"
  >
    <div class="max-w-4xl mx-auto text-center">
      <h1
        class="text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6"
      >
        Memory Lane
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300">
        A gallery of moments
      </p>
    </div>
  </section>

  <MemoryGallery showHeader={false} />

  <!-- Footer -->
  <footer class="bg-gray-100 dark:bg-gray-800 py-12 px-6">
    <div class="max-w-6xl mx-auto text-center">
      <div class="mb-8">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
          Avanish's Corner
        </h3>
        <p class="text-gray-600 dark:text-gray-300 mb-6">
          Where words dance with emotions
        </p>
        <div class="flex justify-center space-x-6">
          <a
            href="/"
            class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >Home</a
          >
          <a
            href="/poems"
            class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >Poems</a
          >
          <a
            href="/memories"
            class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >Memories</a
          >
          <a
            href="/about"
            class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >About</a
          >
        </div>
      </div>
      <div class="border-t border-gray-200 dark:border-gray-700 pt-8">
        <p class="text-gray-500 dark:text-gray-400">
          © 2025 Avanish. Made with ❤️ and poetry.
        </p>
      </div>
    </div>
  </footer>
</Layout>
