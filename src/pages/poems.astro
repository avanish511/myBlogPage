      "bg-white dark:bg-gray-800 rounded-xl border border-gray-200/70 dark:border-gray-700/60 shadow hover:shadow-xl transition-all duration-300 hover:-translate-y-1 cursor-pointer p-5 relative";
    card.innerHTML = `
      <div class=\"absolute top-3 right-3 text-xl select-none\">${p.e}</div>
      <h3 class=\"text-lg md:text-xl font-semibold text-gray-900 dark:text-white\">${p.t}</h3>
    `;
    card.onclick = () => window.openPoemByIndex(i);
    grid.appendChild(card);
  });

  function renderPoemByIndex(i) {
    const p = poemsData[i];
    if (!p) return;
    document.getElementById("poem-title").textContent = p.t;
    document.getElementById("poem-content").textContent = p.c;
  }

  function openPoem(p) {
    const m = document.getElementById("poem-modal");
    currentPoemIndex = poemsData.findIndex((x) => x.t === p.t);
    if (currentPoemIndex < 0) currentPoemIndex = 0;
    renderPoemByIndex(currentPoemIndex);
    m.classList.remove("hidden");
    m.classList.add("flex");
    document.body.style.overflow = "hidden";
  }
  function openPoemByIndex(i) {
    const m = document.getElementById("poem-modal");
    currentPoemIndex = i;
    renderPoemByIndex(currentPoemIndex);
    m.classList.remove("hidden");
    m.classList.add("flex");
    document.body.style.overflow = "hidden";
  }
  function closePoem() {
    const m = document.getElementById("poem-modal");
    m.classList.add("hidden");
    m.classList.remove("flex");
    document.body.style.overflow = "auto";
  }
  function prevPoem() {
    if (currentPoemIndex <= 0) currentPoemIndex = poemsData.length - 1;
    else currentPoemIndex -= 1;
    renderPoemByIndex(currentPoemIndex);
  }
  function nextPoem() {
    if (currentPoemIndex >= poemsData.length - 1) currentPoemIndex = 0;
    else currentPoemIndex += 1;
    renderPoemByIndex(currentPoemIndex);
  }

  window.openPoem = openPoem;
  window.openPoemByIndex = openPoemByIndex;
  window.closePoem = closePoem;
  window.prevPoem = prevPoem;
  window.nextPoem = nextPoem;

  document
    .getElementById("poem-modal")
    ?.addEventListener("click", function (e) {
      if (e.target === this) closePoem();
    });
  document.addEventListener("keydown", function (e) {
    if (e.key === "Escape") closePoem();
    if (!document.getElementById("poem-modal").classList.contains("hidden")) {
      if (e.key === "ArrowLeft") prevPoem();
      if (e.key === "ArrowRight") nextPoem();
    }
  });
</script>
